
// Create switch comparison on [.source] setting value of [.result]
.result
.source:foo
switch:x:@.source
   case:foo

      // Value of [.source] was foo
      set-value:x:@.result
         .:Is foo
   case:bar

      // Value of [.source] was bar
      set-value:x:@.result
         .:Is bar
   default

      // Value of [.source] was neither foo nor bar
      set-value:x:@.result
         .:None of the above
